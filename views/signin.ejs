                <div class="login-form">
                        <h1>Đăng nhập</h1>
                    <div id="form-login" action="#" >
                        <form action="/login/admin" method="POST">       
                            <div class="form-group">
                                <label for="user">Email:</label><br>
                                <input type="text" name="username" id="txtUser" placeholder="example@abc.com" required><br>
                            </div>
                            <div class="form-group">
                                <label for="pwd">Mật khẩu:</label><br>
                                <input type="password" name="pwd" id="txtPwd"  placeholder=" Mật khẩu" required><br>   
                            </div>
                            <span id="err"></span>
                            <div class="submit-g">
                                    <input id="btn-submit" type="submit" value="Đăng nhập">
                            </div>
                        </form>
                        <div class="line"></div>
                        <div class="sign-up-btn">
                            <p id="sign-up">Bạn chưa có tài khoản?|<a href="/login/signup" target="">Đăng ký</a> ngay</p>
                        </div>
                    </div>
                </div>
            </div>
    </main>
